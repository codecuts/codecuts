<!doctype html>
<html ng-app>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<title><%= @document.title %></title>
	<meta name="description" content="">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<%- @getBlock("meta").toHTML() %>
    <%- @getBlock("styles").add(["/styles/style.css"]).toHTML() %>
    <link href='http://fonts.googleapis.com/css?family=Ubuntu:300,400,500,700,300italic,400italic,500italic,700italic' rel='stylesheet' type='text/css'>
    <script src="/vendor/angular.min.js"></script>
    <script src="/vendor/mootools-core.js"></script>
    <script src="/vendor/mootools-more.js"></script>
</head>
<body>
	<div id="content">
		<div id="menu-toggle">
			<img src="images/menu_icon.png"/>
		</div>
		<nav role="navigation" class="menu">
			<ul>
				<% for page in @getCollection('html').findAllLive({menuItem:true},[{menuOrder:1}]).toJSON(): %>
				<li>
					<a class="menu-item" title="<%= page.title %>" href="#<%= page.title.toLowerCase() %>" name="#<%= page.title.toLowerCase() %>">
					  <%= page.title %>
					</a>
				</li>
				<% end %>
			</ul>
		</nav>
		<header id="intro" class="section">
			<div class="branding">
				<img class="logo" src="images/logo.png"></img>
				<h1 class="site-title">CODECUTS</h1>
			</div>
		</header>
		<section id="hello" class="section">
			<div ng-include  src="'partials/hello.html'"></div>
		</section>
		<section id="work" class="section">
			<div ng-include src="'partials/work.html'"></div>
		</section>
		<section id="about" class="section">
			<div ng-include src="'partials/about.html'"></div>
		</section>
		<section id="contact" class="section">
			<div ng-include src="'partials/contact.html'"></div>
		</section>
		<footer class="footer">
			<a class="impressum">impressum</a>
		</footer>
	</div>
	<%- @getBlock("scripts").add(["/scripts/all.js"]).toHTML() %>
</body>
</html>