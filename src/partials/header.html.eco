<!doctype html>
<html ng-app>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<title><%= @document.title %></title>
	<meta name="description" content="">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<%- @getBlock("meta").toHTML() %>
    <%- @getBlock("styles").add(["/styles/style.css"]).toHTML() %>
	
    <script src="/vendor/angular.min.js"></script>
    <script src="/vendor/mootools-core.js"></script>
    <script src="/vendor/mootools-more.js"></script>
</head>
<body class="<%= @document.layout %>">
	<div id="content">
		<div id="menu-toggle">
			<img src="/images/menu_icon.png"/>
		</div>
		<nav role="navigation" class="menu">
			<ul>
				<li>
					<a class="menu-item" title="Home" href="<%= @site.url %>#intro">Home</a>
				</li>
				<% for page in @getCollection('html').findAllLive({menuItem:true},[{menuOrder:1}]).toJSON(): %>
				<li>
					<a class="menu-item" title="<%= page.title %>" href="<%= @site.url %>/#<%= page.title %>" name="#<%= page.title.toLowerCase() %>">
					  <%= page.title %>
					</a>
				</li>
				<% end %>
			</ul>
		</nav>